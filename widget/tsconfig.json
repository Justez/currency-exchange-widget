{
  "compilerOptions": {
    "sourceMap": true,
    "target": "ESNext",
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": false,
    "declaration": false,
    "removeComments": true,
    "strictNullChecks": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "strict": true,
    "skipLibCheck": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "outDir": "dist",
    "baseUrl": "src",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/types/**/*.d.ts"
    ],
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "exclude": [
    "dist",
    "env",
    "config",
    "public",
    "node_modules",
    "tests",
    "helpers",
    "styles",
    "src/**/*.js",
    "src/**/*.jsx"
  ],
  "include": [
    "src"
  ]
}
